<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
          <h2>User info</h2>
          <%= attachment_image_tag current_user, :image_id, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to "", edit_user_path(@user) ,class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{current_user.id}" %>
          </div>

          <h2 class="mt-3">New book</h2>

            <%= form_for(@book) do |f| %>
            <div class="form-group">
              <label>Title</label>
              <%= f.text_field :book_title, class:"form-control book_title" %>
            </div>

            <div class="form-group">
              <label>Opinion</label>
              <%= f.text_area :description, class:"form-control book_body" %><br>
            </div>

            <div class="form-group">
              <%= f.submit 'Create Book', class:"btn btn-success" %>
            </div>
            <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
          <td>
            <%= attachment_image_tag user, :image_id, :fill, 40, 40, format: 'jpeg', fallback: "no-image-icon.jpg", class:"attachment user profile_image fallback" %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to"Show", user_path(user.id), class:"user_#{user.id}" %>
          </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>