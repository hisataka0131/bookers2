<%= form_with model: book do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, class:"form-control book_title" %>
  </div>

  <div class="form-group">
    <label>Opinion</label>
    <%= f.text_area :body, class:"form-control book_body" %><br>
  </div>

  <div class="form-group">
    <%= f.submit bname, class:"btn btn-success" %>
  </div>
<% end %>