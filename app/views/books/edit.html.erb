<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editng Book</h2>
      <% if @book.errors.any? %>
      <h3 class="error"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="error error_messages"><%= message %></li>
      <% end %>
      </ul>
      <% end %>
      <%= form_for(@book) do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control book_title" %>
        </div>

        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, class:"form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <div>
        <%= link_to "Show", book_path(@book.id), class:"book_#{@book.id}"  %>
         |
        <%= link_to "Back" , books_path, class:"back" %>
      </div>
    </div>
  </div>
</div>

